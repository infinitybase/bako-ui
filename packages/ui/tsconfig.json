{
	"extends": "@bako/ts-config/react-library",
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"types": ["vitest/globals"],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "setup-test.ts"]
}
